# .editorconfig
# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 98
trim_trailing_whitespace = true

[*.java]
indent_size = 4

[*.xml]
indent_size = 4

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
